<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/legno_bianco"
    android:layout_marginStart = "50px"
    android:layout_marginEnd = "50px"
    android:layout_marginTop = "100px"
    android:layout_marginBottom = "70px"
    >

    <!-- Stato visivo (es. colore) -->
    <ImageView
        android:id="@+id/statusIndicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp"
        android:contentDescription="Stato fumetto"
        android:src="@drawable/ic_circle_gray"
        android:layout_marginStart = "20px"
        />


    <!-- Titolo -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titolo del Fumetto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Pulsanti -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/reserveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prenota" />

        <Button
            android:id="@+id/returnButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Restituisci"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/waitlistButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lista d'attesa"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>

