<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sinistra del libro -->
    <item android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"/>
            <padding android:right="1dp"/>
        </shape>
    </item>

    <!-- Destra del libro -->
    <item android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topRightRadius="8dp" android:bottomRightRadius="8dp"/>
            <padding android:left="1dp"/>
        </shape>
    </item>

    <!-- Ombra centrale (rilegatura) -->
    <item android:gravity="center_horizontal">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D0D0D0"
                android:centerColor="#999999"
                android:endColor="#D0D0D0"
                android:angle="0"/>
            <size android:width="4dp"/>
        </shape>
    </item>

</layer-list>
